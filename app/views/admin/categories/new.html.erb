<% provide:title, t("admin.categories.new") %>
<h1><%= t "admin.categories.new" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @category] do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit t("admin.categories.create_new_category"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
