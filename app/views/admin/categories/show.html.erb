<% provide :title, @category.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="category_info">
      <h1>
        <%= link_to @category.name, admin_categories_path %>
        <%= link_to "addword", new_admin_category_word_path(@category),
          class: "btn btn-lg btn-primary" %>
      </h1>
      <table class="table table-striped">
        <% @words.each do |word| %>
          <tr>
            <td>
              <%= link_to word.content, admin_category_word_path(@category, word) %>
            </td>
            <td>
              <%= link_to t("admin.delete"), admin_category_word_path(@category, word),
                method: :delete, data: {confirm: t("admin.call")}, class: "btn btn-sm btn-danger" %>
            </td>
            <td>
              <%= link_to t("admin.edit"),edit_admin_category_word_path(@category, word),
                class: "btn btn-sm btn-info" %>
            </td>
          </tr>
        <% end %>
      </table>
    </section>
  </aside>
  <div class="col-md-6">
  </div>
</div>
