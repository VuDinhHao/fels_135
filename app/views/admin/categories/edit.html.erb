<% provide :title, t("admin.editcategory") %>
<h1><%= t "admin.editcategory" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @category] do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.submit t("admin.savechanges"), class: "btn btn-sm btn-primary" %>
    <% end %>
  </div>
</div>
