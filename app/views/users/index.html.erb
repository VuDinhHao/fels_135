<% provide :title, t("admin.allusers") %>
<h1><%= t "admin.allusers" %></h1>
<table class="table table-striped">
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= gravatar_for user %>
        <%= link_to user.name, user %>
      </td>
      <% if current_user.admin? && !user.admin? %>
        <td>
          <%= link_to t("admin.delete"), admin_user_path(user), method: :delete,
            data: {confirm: t("admin.call")}, class: "btn btn-sm btn-danger" %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
<%= will_paginate @users %>
